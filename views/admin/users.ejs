        <div class="container mt-4">

            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Verified</th>
                        <th scope="col">status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <% if(users.length> 0){
                    for(let i=0 ;i < users.length;i++ ){ %>
                        <tr>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#userModal<%= i %>">
                                    <%= users[i].userName %>
                                </button>
                
                                <!-- User Modal -->
                                <div class="modal fade" id="userModal<%= i %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="color: black;">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel" style="color: black;">User Detail</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <label>
                                                    <h6 style="color: black;">Name: <%= users[i].userName %></h6>
                                                    <h6 style="color: black;">Email: <%= users[i].Email %></h6>
                                                    <h6 style="color: black;">Mobile: <%= users[i].Mobile %></h6>
                                                </label>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <%= users[i].Email %>
                            </td>
                            <td>
                                <%= users[i].Mobile %>
                            </td>
                            <td>
                                <% if( users[i].is_Verified==0 ){ %>
                                    <p style="color:red"> Not Verified </p>
                                <% } else{ %>
                                    <p style="color:green">Verified</p>
                                <% } %>
                            </td>
                            <td>
                                <%if(users[i].block==true ){%>
                                    <p style="color: green;">active</p>
                                <% } else{ %>
                                    <p style="color: red;">blocked</p>
                                <%}%>
                            </td>
                            <td>
                                <a href="/admin/user-block?id=<%=users[i]._id %>">
                                    <button>
                                        <%if(users[i].block==true ){%>
                                            Block
                                        <% } else{ %>
                                            Unblock
                                        <%}%>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    <% } }else{ %>
                        <tr>
                            <td colspan="5">Users Not Found</td>
                        </tr>
                    <% }%>
                


            </table>
