        <div class="container-fluid mt-3">
            <div class="row  justify-content-center">

                <div class="col-md-8 mt-0">


                    <div class="container ">

                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Brand</th>
                                    <th scope="col"> Main Category</th>
                                    <th scope="col"> Sub Category</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>
                            <% products.forEach((product,index)=>{ %>




                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>


                                    <td>
                                        <img src="/productImage/<%=product.image[0] %>" alt=""
                                            style="width:80px;height:80px;">
                                    </td>
                                    <td>
                                        <%=product.productName %>
                                    </td>


                                    <td>
                                        <%=product.brand %>
                                    </td>


                                    <td>
                                        <%=product.mainCategory %>
                                    </td>


                                    <td>
                                        <%=product.subCategory %>
                                    </td>
                                    <td>

                                        <%=product.price %>
                                    </td>

                                    <td>
                                        <%=product.quantity %>
                                    </td>
                                    <td>

                                        <%=product.createdAt %>
                                    </td>
                                    <td>
                                        <% if(product.quantity>=5){%>
                                            <p style="color:rgb(24, 214, 24);">In Stock</p>

                                            <% } else if(product.quantity<=0) {%>
                                                <p style="color: rgba(231, 0, 0, 0.986);">Out Of Stock</p>

                                                <% } else {%>
                                                    <p style="color:yellow">Limited Stock</p>
                                                    <%}%>
                                    </td>
                                    <td>
                                        <%if(product.disable==true ){%>
                                            <p style="color: red;">Disabled</p>

                                            <% } else{ %>

                                                <p style="color: green;">Availabe</p>
                                                <%}%>

                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown" style="font-size: 25px ;color:#493a3a" ;>
                                                <!-- <i class="bx bx-dots-vertical-rounded"></i> -->
                                            </button>
                                            <div class="dropdown-menu">
                                                <% console.log(product._id)%>
                                                    <a class="dropdown-item"
                                                        href="/admin/editProduct?id=<%=product._id%>"><i
                                                            class="bx bx-edit-alt me-1" style="color:black;"></i>
                                                        Edit</a>
                                                    <a class="dropdown-item"
                                                        onclick="disableProduct('<%=product._id%>')"><i
                                                            class="bx bx-trash me-1"></i>

                                                        <%if(product.disable==true ){%>

                                                            Enable
                                                            <% } else{ %>
                                                                Disable

                                                                <%}%>
                                                    </a>

                                            </div>

                                        </div>

                                    </td>

                                </tr>
                                <%})%>






                        </table>

