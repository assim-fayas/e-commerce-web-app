                        <span id="thumbnailError" style="color: red; display: none;">Please select an image file.</span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="bannertype">Banner Type</label>
                        <select class="form-control bg-dark col-4" id="bannertype" name="bannertype">
                            <option value="">Select banner type</option>
                            <option value="sliding">Sliding Banner</option>
                            <option value="category">Category Banner</option>
                        </select>
                        <span id="bannerTypeError" style="color: red; display: none;">Please select a banner
                            type.</span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="name">Description</label>
                        <div class="input-group">
                            <input type="text" class="form-control bg-dark col-4" id="description" name="description"
                                placeholder="Enter Description">
                        </div>
                        <span id="descriptionError" style="color: red; display: none;">Please provide a
                            description.</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
            </div>


        </div>


        </form>

        <script>
            function validateFormBanner() {
                // Get form inputs
                const thumbnail = document.getElementById('thumbnail');
                const bannerType = document.getElementById('bannertype');
                const description = document.getElementById('description');

                // Get error message elements
                const thumbnailError = document.getElementById('thumbnailError');
                const bannerTypeError = document.getElementById('bannerTypeError');
                const descriptionError = document.getElementById('descriptionError');

                // Set flag variable to track if any errors were found
                let errorFound = false;

                // Check if thumbnail is selected
                if (thumbnail.files.length === 0) {
                    thumbnailError.style.display = 'block';
                    errorFound = true;
                } else {
                    thumbnailError.style.display = 'none';
                }

                // Check if banner type is selected
                if (bannerType.value === '') {
                    bannerTypeError.style.display = 'block';
                    errorFound = true;
                } else {
                    bannerTypeError.style.display = 'none';
                }

                // Check if description is provided
                if (description.value === '') {
                    descriptionError.style.display = 'block';
                    errorFound = true;
                } else {
                    descriptionError.style.display = 'none';
                }

                // Return false if any errors were found
                if (errorFound) {
                    return false;
                }

                // Submit form if no errors were found
                return true;
            }

            // Get form element
            const bannerForm = document.getElementById('bannerForm');

            // Attach event listener to form submit event
            bannerForm.addEventListener('submit', function (event) {
                // Prevent default form submission
                event.preventDefault();

                // Validate form
                const formValid = validateForm();

                // Submit form if valid
                if (formValid) {
                    this.submit();
                }
            });
        </script>

