                <form action="/admin/addbannerCaro" method="post" enctype="multipart/form-data"
                    style="background-color: #585856; color: #ffffde; border: 1px solid rgb(1, 1, 1); padding: 20px;"
                    class="text-left  form-sm" id="bannerForm" onsubmit="return validateFormBanner()">
