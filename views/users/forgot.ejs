            <div class="column1">
                <form action="/forgot" method="post" id="form" class="form">
                    <h2> reset Password </h2>

                    <% if(typeof message !=='undefined' ){ %>

                        <p style="color: rgb(79, 128, 0)">
                            <%= message %>
                        </p>

                        <% } %>

                            <div class="form-control">
                                <label for='email'>Email
                                    <input type="email" id="email" placeholder="Enter email" name="email">
                                    <small>Error message</small></label>
                            </div>


                            <button type="submit">Reset</button>

                </form>








            </div>
            <div class="column2">

                <img src="https://i.ibb.co/k5NNz4F/pablo-sign-up.png" alt="pablo-sign-up" border="0"
                    class='signup-image'>
